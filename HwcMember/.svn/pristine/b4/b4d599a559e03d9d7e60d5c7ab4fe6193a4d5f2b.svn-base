<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/goods_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/icon_defultbg" />

    <TextView
        android:id="@+id/goodsname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/goods_iv"
        android:lines="2"
        android:text="商品名"
        android:textSize="@dimen/text_14" />
    
    <TextView
        android:id="@+id/package_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@id/goodsname_tv"
		android:layout_below="@id/goodsname_tv"
        android:text=""
        android:textSize="@dimen/text_14"
        android:textColor="@color/gray5" />

    <TextView
        android:id="@+id/promprice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="￥30.00"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/promprice_tv"
        android:text="x1"
        android:textColor="@color/gray5"
        android:textSize="@dimen/text_14" />

</RelativeLayout>