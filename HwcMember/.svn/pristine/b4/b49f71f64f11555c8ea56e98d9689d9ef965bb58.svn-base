    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#f7b72a" android:startColor="#ae8522" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <gradient android:angle="270" android:endColor="#f7b72a" android:startColor="#ae8522" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="270" android:endColor="#f7b72a" android:startColor="#f7b72a" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>