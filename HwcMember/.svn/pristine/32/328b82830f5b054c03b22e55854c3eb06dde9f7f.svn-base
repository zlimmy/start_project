<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="12dp" >

    <com.hwc.member.widget.CircleImageView
        android:id="@+id/iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:src="@drawable/user_photo"
        app:border_color="@color/gray3"
        app:border_width="1dp"
        android:layout_marginLeft="6dp" />
    
    <TextView 
        android:id="@+id/nick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:layout_toRightOf="@id/iv"
        android:textSize="@dimen/text_14"
        android:textColor="@color/gray5"
        android:layout_marginLeft="18dp"/>
    
    <TextView 
        android:id="@+id/mobile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机"
        android:textSize="@dimen/text_14"
        android:textColor="@color/gray5"
        android:layout_alignLeft="@id/nick_tv"
        android:layout_centerVertical="true"/>
    
    <TextView 
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入时间"
        android:textSize="@dimen/text_14"
        android:textColor="@color/gray5"
        android:layout_alignLeft="@id/nick_tv"
        android:layout_alignParentBottom="true"/>
    
    <ImageView 
        android:id="@+id/in_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_in"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/rebate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mobile_tv"
        android:layout_alignBottom="@+id/mobile_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="0.0"
        android:textColor="@color/orange1" />

</RelativeLayout>