<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <com.hwc.member.widget.header.LXHeadView
        xmlns:my="http://schemas.android.com/apk/res/com.hwc.member"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:centertitle="关于我们" />
    
    
    <ImageView 
        android:id="@+id/main_logo"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/bg_logo_about"
        android:layout_marginTop="107dp"
        android:layout_centerHorizontal="true"/>
    
    <TextView 
        android:id="@+id/main_tv"
        android:layout_below="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/text_18"
        android:text="惠万村会员端"
        android:singleLine="true"/>
    
    <TextView 
        android:id="@+id/version_tv"
        android:layout_below="@+id/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_less_important"
        android:text="20150405.1"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_14"/>
    
    <Button 
        android:id="@+id/btn_clean"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/version_tv"
        android:layout_marginTop="100dp"
        android:layout_width="160dp"
        android:layout_height="35dp"
        style="@style/btn_tv_style"
        android:textSize="@dimen/text_16"
        android:text="清除缓存"/>

</RelativeLayout>
