<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.hwc.member.widget.header.LXHeadView
        xmlns:my="http://schemas.android.com/apk/res/com.hwc.member"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:centertitle="确认订单" />

    <RelativeLayout
        android:id="@+id/stat_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <ImageView
            android:id="@+id/state_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/desc_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/flag_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="@dimen/text_24" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/flag_tv"
            android:layout_centerHorizontal="true"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/desc_tv"
            android:layout_below="@id/desc_tv"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <Button
            android:id="@+id/goorder_but"
            style="@style/btn_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="查看订单" />

        <Button
            android:id="@+id/goshop_but"
            style="@style/btn_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="返回店铺" />
    </RelativeLayout>

</LinearLayout>