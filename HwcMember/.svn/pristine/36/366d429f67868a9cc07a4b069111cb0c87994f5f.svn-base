<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp" >

        <TextView
            android:id="@+id/add_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:text="联系人"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/my_doinfo"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/add_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/add_name_tv"
            android:layout_below="@+id/add_name_tv"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:text="地址"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/add_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_address_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:maxLength="14"
            android:text="电话"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14" />
        
    </RelativeLayout>
    
    <View style="@style/divider_horizontal"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        
		<TextView 
            android:id="@+id/defaylt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_14"
            android:visibility="invisible"/>
		
		<TextView 
		    android:id="@+id/edit_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="编辑"
		    android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"
            android:drawableLeft="@drawable/icon_edit"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
        
    </RelativeLayout>

</LinearLayout>