<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/prolist_rl"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_stroke" >

        <ImageView
            android:id="@+id/pro_iv"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_13" />

        <RelativeLayout
            android:id="@+id/price_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2.20"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_14" />


            <LinearLayout
                android:id="@+id/views_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:background="@drawable/icon_page_view"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/views_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_less_important"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/prom_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2.20"
                android:textColor="@color/gray4"
                android:textSize="@dimen/text_12" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/num_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/shape_orange"
                    android:padding="3dp"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/stock_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/shape_gold"
                    android:padding="3dp"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"
                    android:visibility="visible" />
            </LinearLayout>



        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>