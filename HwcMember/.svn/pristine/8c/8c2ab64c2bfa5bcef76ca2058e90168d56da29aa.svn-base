<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="0.8px" android:color="@color/white" />

            <gradient android:angle="270.0" android:endColor="@color/gray1" android:startColor="#ffe8ecef" />
   </shape></item>
        
    
    
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/gray1" android:startColor="#ffe8ecef" />

            <stroke android:width="0.8px" android:color="@color/white" />
        </shape></item>
         
    
    <item><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <stroke android:width="0.8px" android:color="@color/white" />
        </shape></item>

</selector>