<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="274dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_no_money" >

        <TextView
            android:id="@+id/rabbit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="红包已被领完，\n下回记得早点来哦！"
            android:textSize="@dimen/text_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rabbit_iv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_less_important"
            android:text="很遗憾"
            android:textSize="@dimen/text_45" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="18dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/r_close" />

</RelativeLayout>