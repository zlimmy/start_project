<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}" >

    <!-- 最后一行是粗细 -->

    <ImageView
        android:id="@+id/nodata_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nodata" />

    <TextView
        android:id="@+id/nodata_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nodata_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="@color/text_less_important"
        android:text="@string/meiyouyouhuiquan" />

    <Button
        android:id="@+id/nodata_but"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/nodata_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_bt"
        android:padding="6dp"
        android:text="@string/ruhezhuanqu"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14" />

</RelativeLayout>