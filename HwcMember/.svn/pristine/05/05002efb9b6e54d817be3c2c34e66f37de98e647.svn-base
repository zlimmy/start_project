<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/discount_user" >

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="价值"
            android:textColor="@color/white"
            android:textSize="16sp" />

            <TextView
                android:id="@+id/need_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/money_tv"
                android:textColor="#8EC8DF"
                android:text="消费满1000以上使用" />

            <TextView
                android:id="@+id/shop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/need_tv"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/money_tv"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="仅可用于芦村滨河手机专卖店" />

            <TextView
                android:id="@+id/data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="有效期: 2015.11.11-2015.12.12"
                android:textColor="@color/main_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/money_tv"
                android:layout_alignBottom="@+id/money_tv"
                android:layout_marginLeft="20dp"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>