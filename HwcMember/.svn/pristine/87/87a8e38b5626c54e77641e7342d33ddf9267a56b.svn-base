<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.hwc.member.widget.header.LXHeadView
        xmlns:my="http://schemas.android.com/apk/res/com.hwc.member"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:centertitle="收货地址管理" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99"
        android:layout_below="@+id/title_rl"
        android:layout_marginTop="10dp"
        android:dividerHeight="10dp"
        android:divider="@color/gray1" />

    <RelativeLayout
        android:id="@+id/add_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/boder_linayout_white" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/iconfont_tianjia"
            android:gravity="center"
            android:text="\t添加收货地址"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

</LinearLayout>