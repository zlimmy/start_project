<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="header_style">
        <item name="android:textSize">@dimen/text_12</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- dialog activity -->
    <style name="DialogTransparent">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Dialog样式 -->
    <style name="DialogStyle">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ProgressDialogStyle" parent="DialogStyle">
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <!-- 过度线条 -->
    <style name="transition_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/transition_line</item>
    </style>

    <!-- 我的字体样式 -->
    <style name="my_test_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/gray5</item>
    </style>

    <!-- 我的里面箭头 -->
    <style name="my_moreimg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/text_12</item>
    </style>

    <!-- 我的里面图标 -->
    <style name="my_iconimg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/text_10</item>
    </style>

    <style name="SimpleHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/simplehud_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 水平分割线 -->
    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#f1f1f1</item>
    </style>
    

  <!--   阴影分割线 -->
   <style name="divider_horizontal_shadow">
  <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/shap_gradient</item>
</style>

    <!--   阴影分割线 -->
   <style name="divider_horizontal_shadow_gray">
  <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/shape_gradient_gray</item>
</style>

   
    <style name="divider_horizontal_f2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    
    <style name="divider_horizontal_c4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#c4c4c4</item>
    </style>
    <!-- 垂直分割线 -->
    <style name="divider_vertical">
        <item name="android:layout_width">0.01dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#f1f1f1</item>
    </style>
    <!-- 输入框文字 -->
    <style name="tv14_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray4</item>
    </style>

    <!-- 按钮文字 -->
    <style name="btn_tv_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/shape_bt</item>
    </style>

    <!-- 按钮文字 -->
    <style name="btn_white_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/shape_bt_white</item>
    </style>

    <!-- 按钮文字 -->
    <style name="btn_gray_style">
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/shape_bt_white</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 头像放大支持手势 -->
    <style name="custom_dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>