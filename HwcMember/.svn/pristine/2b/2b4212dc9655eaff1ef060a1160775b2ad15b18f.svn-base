<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discount_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/discount_ll"
        android:layout_width="329dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yhq_used_b"
        android:orientation="vertical">

        <!-- <View style="@style/divider_horizontal_c4" /> -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="64"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="奖品："
                android:textColor="@color/coupon_blue"
                android:textSize="@dimen/text_16" />


            <TextView
                android:id="@+id/need_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv1"
                android:layout_marginRight="10dp"
                android:text="消费满1000以上使用"
                android:textColor="@color/text_less_important"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/tv1"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tv1"
                android:layout_marginRight="10dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/coupon_blue"
                android:textSize="@dimen/text_21" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/coupon_blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="47"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/shop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅可用于鹿村山河手机专卖店"
                    android:textColor="@color/text_less_important"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/shop_tv"
                    android:layout_below="@id/shop_tv"
                    android:layout_marginTop="2dp"
                    android:text="有效期：2016.01.21-2016.04.20"
                    android:textColor="@color/text_less_important"
                    android:textSize="@dimen/text_14" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- <View style="@style/divider_horizontal_c4" /> -->
    </LinearLayout>

</RelativeLayout>