<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pro_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_input_account" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pro_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/pro_iv"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_20"
        android:text="￥90-60" />
   
  
   <ImageView
       android:id="@+id/close_iv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_margin="10dp"
       android:src="@drawable/prom_close" />

   <View android:id="@+id/line_view" style="@style/divider_horizontal" android:layout_marginTop="10dp" android:layout_height="1px" android:layout_below="@+id/pro_iv"/>
   
   <TextView
       android:id="@+id/desc_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/pro_iv"
       android:layout_below="@+id/line_view"
       android:layout_marginTop="30dp"
 	   android:textColor="@color/gray5"
       android:text="请选择规格"
       android:textSize="@dimen/text_14" />
   
 	<View style="@style/divider_horizontal" android:id="@+id/line1" android:layout_margin="10dp" android:layout_height="1px" android:layout_below="@+id/desc_tv"/>

 	<TextView
 	    android:id="@+id/pro_desc"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_alignLeft="@+id/price_tv"
 	    android:layout_below="@+id/price_tv"
 	    android:ellipsize="end"
 	    android:maxLines="2"
 	    android:text="规格名称"
 	    android:textColor="@color/gray5"
 	    android:textSize="@dimen/text_14" />
 	
</RelativeLayout>
